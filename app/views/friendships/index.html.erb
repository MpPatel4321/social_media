<%= render 'layouts/nav', user: @user %>
<div class='clearfix'></div>
<hr>

<div class="row" >
  <div class="col-md-6">
    <div class="show_post">
      <div class="show_post">
        <div class="card">
          <table class="table">
            <% @friends.each do |friend| %>
              <% if (friend.friend_id == current_user.id) %>
                <% user = User.find(friend.user_id) %>
              <% else %>
                <% user = User.find(friend.friend_id) %>
              <% end %>
                <tbody>
                  <tr>
                    <th><%= render "users/profile_avatar", user: user %>
                      <%=user.first_name %> <%= user.last_name %></th>
                    <% if current_user.id == @user.id %>
                      <td><ul class="navbar-nav mr-auto float-right">
                            <li class="nav-item <%= (friendships_path) %>">
                              <%= link_to 'Message', message_path(friend), remote: true, class: 'btn btn-primary', style: "width: 115px;" %>
                              <%= link_to 'Remove', friendship_path(user.id), method: :delete, class: 'btn btn-danger', style: "width: 115px;" %>
                            </li>
                          </ul></td>
                    <% end %>
                  </tr>
                </tbody>
            <% end %>
          </table>
        </div><hr>
      </div> 
    </div>
  </div>
</div>


