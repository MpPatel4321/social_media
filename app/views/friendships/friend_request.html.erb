<div class='clearfix'></div>
<div class="row" >
  <div class="col-md-6">
    <div class="show_post">
      <div class="show_post">
        <div class="card">
          <table class="table">
            <% @friend_requests.each do |request| %>
              <tbody>
                <tr>
                  <th><%= render "users/profile_avatar", user: request.user %>
					          <%=request.user.first_name %> <%= request.user.last_name %></th>
                  <td><ul class="navbar-nav mr-auto">
                        <li class="nav-item <%#= friendship_path %>" style="text-align: center;">
                          <% friend = (Friendship.where( user_id: request.user.id, friend_id: current_user.id)) %>
														<%= link_to 'Accept', friendship_path(request.id),method: :put, class: 'btn btn-success', style: "width: 115px;" %>
                            <%= link_to 'Cancle', friendship_path(request.user.id), method: :delete, class: 'btn btn-danger', style: "width: 115px;" %>
											  </li>
                      </ul></td>
                </tr>
              </tbody>
            <% end %>
          </table>
        </div>
      </div> 
    </div>
  </div>
</div>