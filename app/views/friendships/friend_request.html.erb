<div class='clearfix'></div>
<div class="row" >
  <div class="col-md-6">
    <div class="show_post">
      <div class="show_post">
        <div class="card">
          <table class="table">
            <% @friend_requests.each do |request| %>
              <tbody>
                <tr>
                  <th><%= link_to user_path(request.user), remote: true do %>
                        <%= render "users/profile_avatar", user: request.user %>
    					          <%=request.user.first_name %> <%= request.user.last_name %>
                      <% end %>     
                        </th>
                  <td><ul class="navbar-nav mr-auto">
                        <li class="nav-item user-li-<%= request.user.id %>" style="text-align: center;">
                          <%= render "users/user_button" , find_friend: request.user %>
                        </li>
                      </ul></td>
                </tr>
              </tbody>
            <% end %>
          </table>
        </div>
      </div> 
    </div>
  </div>
</div>