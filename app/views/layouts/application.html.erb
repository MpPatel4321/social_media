<!DOCTYPE html>
<html>
  <head>
    <title>Social</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light
            navbar-inverse navbar-fixed-top mb-4">
      <%= link_to root_path, class: 'navbar-brand' do %>
        <% if current_user %>
          <% if current_user.avatar.attached? %>
            <img src="<%=(url_for(current_user.avatar))%>" class="avatar float-left">
          <% else %>
            <image src="/assets/avatar.png" class="avatar float-left">
          <% end %>
        <% end %>

      <% end %>
  

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <% if current_user %>
            <%= link_to "Find Friends", users_path, class: 'nav-link' %>
          <% end %>
        </li>
        <li class="nav-item <%= root_path %>">
          <% if current_user %>
            <%= link_to 'Create New Post', "#",
                    class: "nav-link #{}root_path" %>
          <% end %>
        </li>
      </ul>
      <div class="pull-right">
        <ul class="navbar-nav">
          <% if current_user %>
            <li class="nav-item">
              <%= link_to 'My Account', user_path(current_user),
                          class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Logout', destroy_user_session_path,
                          class: "nav-link", method: :delete %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
  <div class='container' role='main'>
    <% flash.each do |key, value| %>
      <div class="<%= flash_class(key.to_sym) %> show" ><%= value %></div>
    <% end %>

    <%= yield %>
  </div>
  </body>
</html>
<script type="text/javascript">
  $(document).ready(function(){
    setTimeout(function() {
        $(".show").hide()}, 2000);
});
</script>
</html>
