<h2>Sign up</h2>
<hr>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name),
                       html: {class: 'form-horizontal'}) do |f| %>
  <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.label :first_name, class: "col-sm-4 control-label" %>
      <div class="col-sm-6">
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :last_name, class: "col-sm-4 control-label" %>
      <div class="col-sm-6 ">
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name",class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :country_code, class: "col-sm-4 control-label" %>
      <div class="col-sm-6 ">
        <%= f.text_field :country_code, autofocus: true, autocomplete: "country_code",class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :mob_no, class: "col-sm-4 control-label" %>
      <div class="col-sm-6 ">
        <%= f.text_field :mob_no, autofocus: true, autocomplete: "mob_no",class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :dob, class: "col-sm-4 control-label" %>
      <div class="col-sm-6">
        <%= f.date_field (:dob), autofocus: true, autocomplete: "dob", class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :profile_photo, class: "col-sm-4 control-label" %>
      <div class="col-sm-6">
        <%= f.file_field :avatar, autofocus: true, autocomplete: "avatar",
                                  class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, class: "col-sm-4 control-label" %>
      <div class="col-sm-6">
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
                                  class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "col-sm-4 control-label" %>
      <div class="col-sm-6">
          <%= f.password_field :password, autocomplete: "off",
                                          class: "form-control" %>
      </div>
    </div>

   <div class="form-group">
      <%= f.label :password_confirmation, class: "col-sm-4 control-label" %>
      <div class="col-sm-6">
        <%= f.password_field :password_confirmation, autocomplete: "off",
                                                      class: "form-control" %>
      </div>
   </div>

   <div class="form-group">
      <div class="col-sm-offset-2 col-sm-6">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
      </div>
   </div>

   <div class="form-group">
      <div class="col-sm-offset-2 col-sm-6">
        <%= render "devise/shared/links" %>
      </div>
   </div>
<% end %>